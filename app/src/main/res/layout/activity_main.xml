<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/pass_gen_margin"
    android:layout_marginEnd="@dimen/pass_gen_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/generate_password_textView"
        android:layout_width="@dimen/pass_gen_0dp"
        android:layout_height="@dimen/pass_gen_textView_size"
        android:layout_marginTop="@dimen/pass_gen_top_margin"
        android:gravity="center_vertical"
        android:hint="@string/pass_gen_textView_hint"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/generate_password_button"
        android:layout_width="@dimen/pass_gen_0dp"
        android:layout_height="@dimen/pass_gen_button_size"
        android:layout_marginStart="@dimen/pass_gen_margin"
        android:layout_marginEnd="@dimen/pass_gen_margin"
        android:text="@string/pass_gen_button_text"
        android:textColor="@color/black"
        android:textSize="@dimen/pass_gen_button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_password_textView"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>